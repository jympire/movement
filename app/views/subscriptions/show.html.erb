<div class="container content">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <center><h2>Update your card</h2></center>
      <br><br>
    
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="container">
            <br>
              <%= form_tag subscription_path, method: :put, id: "payment-form" do %>
                <span class="payment-errors"></span>

                <div class="form-row">
              <label>
                <span>Card Number</span>
                <input class="form-control" type="text" size="20" data-stripe="number" value="4242 4242 4242 4242">
              </label>
            </div>
            
            <br>
                        
            <div class="form-row">
              <label>
                <span>Expiration (MM/YY)</span>
                <input class="form-control" type="text" size="2" data-stripe="exp_month" value="12">
              </label>
              <span> / </span>
              <input class="form-control" type="text" size="2px" data-stripe="exp_year" value="20">
            </div>
            
            <br>
            
            <div class="form-row">
              <label>
                <span>CVC</span>
                <input class="form-control" type="text" size="4" data-stripe="cvc" value="123">
              </label>
            </div>
               
              <br>
              <input type="submit" class="btn btn-subscribe" value="Update Card">
              <br><br>
              <%= link_to 'Back', :back, class: "small" %>
              <br>
            </div>
          <% end %>  
        </div>  
      </div>
    </div>
  </div>
</div>