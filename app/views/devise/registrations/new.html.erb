<div class="container content devise">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-default">
        <div class="container">
          <h3><strong>Sign up for Postuur</strong></h3>
          
          <br>
          
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
            
          <div class="form-group">
            <%= f.text_field :first_name, :class => "validate", :placeholder => "First Name", class: "form-control", required: true %>
          </div>

          <div class="form-group">
            <%= f.text_field :last_name, :class => "validate", :placeholder => "Last Name", class: "form-control", required: true %>
          </div>

          <div class="form-group">
            <%= f.email_field :email, :placeholder => "Email address", class: "form-control", required: true %>
          </div>

          <div class="form-group">
            <%= f.password_field :password, autocomplete: "off", :class => "validate", :placeholder => "Create a password", class: "form-control", required: true %>
          </div>
          
          <br>

          <div class="actions">
            <%= f.submit "Sign up", :class => "btn btn-submit btn-block" %>
          </div>
          <% end %>
          
          <br>

          <center><span>Already have a Postuur account? <%= link_to "Log in", new_session_path(resource_name), class: "underline" %></span></center>
          
          <br>
        
        </div> 
      </div>
    </div>
  </div> 
</div>



