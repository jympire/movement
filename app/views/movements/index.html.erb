<div class="container content">
  <h2><strong>Movements</strong></h2>
  <br>
  <% @movements.each do |movement| %>
    <%= link_to movement do %>
      <hr>
      <div class="movement">
        <span class="pull-left"> </span><span class="title"><h3><strong><%= movement.text %></strong></h3></span> 
        <p><%= movement.description %></p>
      </div>
    <% end %>
  <% end %>

</div>

