<div class="embed-responsive embed-responsive-16by9">
  <center class="video">
    <iframe class="embed-responsive-item" src='https://player.vimeo.com/video/<%= @movement.vimeo %>?rel=0&autoplay=<%= params[:autoplay] || 0 %>' frameborder='0' allowfullscreen></iframe> 
  </center>  
</div>
 <div class="container content">
  <h3><strong><%= @movement.text %></strong></h3>
  <p><%= @movement.description %></p>
  <br>
  <div class="row">
    <div class="col-md-6">
      <div id="equipments">
        <div class="panel panel-default">
          <div class="panel-body">
            <h4><strong>Equipment</strong></h4>
            <ul>
              <% @movement.equipments.each do |equipment| %>
                <li>
                  <%= equipment.name %>
                </li>
              <% end %>
            </ul>  
          </div>
        </div>
        
      </div>
    </div>
    <div class="col-md-6">
      <div id="directions">
        <div class="panel panel-default">
          <div class="panel-body">
            <h4>Directions</h4>
            <ul>
              <% @movement.directions.each do |direction| %>
                <li>
                  <%= direction.step %>
                </li>
              <% end %>
            </ul>  
          </div>
        </div>
      </div>
    </div>
  </div>

  <% if policy(Movement).new? %>
    <%= link_to 'Edit', edit_movement_path(@movement) %> |
    <%= link_to 'Back', movements_path %>
  <% end %>  
</div>

